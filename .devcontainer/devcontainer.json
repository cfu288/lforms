// See https://containers.dev/implementors/json_reference/ for configuration reference
{
  "name": "lforms",
  "build": {
    "dockerfile": "Dockerfile",
  },
  "customizations": {
    "vscode": {
      "extensions": ["ms-azuretools.vscode-docker"],
    },
  },
  "remoteUser": "lforms-dev",
  "runArgs": ["--ulimit=nofile=1024:8192", "--cpus=8", "--memory=16g"],
  "containerEnv": {
    "TZ": "America/New_York",
  },
  "mounts": [
    "source=lforms-bashhistory,target=/commandhistory,type=volume",
  ],
  "postCreateCommand": "npm install && npx cypress install",
}
